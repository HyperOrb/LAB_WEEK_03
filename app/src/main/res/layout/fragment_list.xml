<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ListFragment"><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Coffee List"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/affogato"
        style="@style/CoffeeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/affogato" />

    <TextView
        android:id="@+id/americano"
        style="@style/CoffeeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/americano" />

    <TextView
        android:id="@+id/latte"
        style="@style/CoffeeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latte" />

    <TextView
        android:id="@+id/cappuccino"
        style="@style/CoffeeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cappuccino" />

    <TextView
        android:id="@+id/espresso"
        style="@style/CoffeeListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/espresso" />

</LinearLayout>